; Modules

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = "Ôõø "
format-connected-prefix-foreground = ${colors.primary}
label-connected = %local_ip%

[module/kernel]
type = custom/script
exec = uname -r
tail = true
interval = 10000
format-prefix = " ÔÖº "
format-foreground = ${colors.primary}

[module/spotify]
type = custom/script
interval = 1
format-prefix = " ÔÄÅ "
format = <label>
exec = $HOME/.config/polybar/spotify.py
format-underline = 
format-foreground = ${colors.primary}

[module/xwindow]
type = internal/xwindow
format-foreground = ${colors.primary}
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = Ôà≥  %mountpoint% %percentage_used%% / %total%
label-mounted-foreground = ${colors.primary}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.primary}

[module/i3]
